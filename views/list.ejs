<%- include("header") -%>

<div class="box" id="heading">
    <h1> <%= pageTitle %> </h1>
</div>

<div class="box">
    <% for(var i=0;i<newItems.length;i++){ %>

    <div class="item">
        <input type="checkbox">
        <p> <%= newItems[i] %> </p>
    </div>

    <% } %>

    <form action="/" method="POST">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value=<%= pageTitle %>>+</button>
    </form>

</div>

<%- include("footer") -%>
